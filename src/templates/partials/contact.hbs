<section id="contact-wrapper">
  <div class="container">

    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h1>Contact Us</h1>
        <h5>We would love to hear your feedback.</h5>

        <form action="http://www.bluehost.com/bluemail" enctype="multipart/form-data" method="POST">
          <div class="form-group"><label for="Name">Name</label><input class="form-control" type="text" name="Name"></div>
          <div class="form-group"><label for="mailfrom">Email</label><input class="form-control" type="text" name="mailfrom"></div>
          <div class="form-group"><label for="text">Message</label><textarea class="form-control" rows="8" name="text" ></textarea></div>
          <div class="form-group">
            <input type="hidden" name="redirect" value="http://clickshame.com/thanks.html">
            <input type="hidden" name="sendtoemail" value="admin@clickshame.com"><br>
            <input class="btn btn-pop" type="submit" value="Send">
          </div>
        </form>

      </div>
    </div>
  </div>
</section>