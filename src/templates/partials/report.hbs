---
component: report
---
<section id="report-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">

        <div class="report">
          <div class="report-data-form">
            <h2>Submit a clickbait link</h2>
            <div class="control">
              <input type=text class="url" id="report-url" placeholder="URL">
            </div>
            <div class="control">
              <textarea class="comment" id="report-comment" maxlength="140" placeholder="Add a comment. Save a click."></textarea>
            </div>
            <div class="control">
              <div class="report-errors"></div>
            </div>
            <div class="control">
              <input type="hidden" id="report-captcha-response">
              <button class="btn btn-lg btn-pop btn-block" class="submit" id="report-submit">Submit</button>
            </div>
          </div>

          <div class="report-recaptcha-form">
            <div class="control">
              <div id="report-recaptcha"></div>
            </div>
          </div>

          <div id="report-loader" class="spinner"><div class="dot1"></div><div class="dot2"></div></div>

          <div class="report-thanks">
            <div class="feel-good">
              How did that feel? Good?
            </div>
            <div class="check-it-out">
              Check out the chrome extension below...
            </div>
          </div>

        </div>

      </div>
    </div>
  </div>
</section>
